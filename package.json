{
  "name": "@gilbert_oliveira/commit-wizard",
  "displayName": "Commit Wizard",
  "publisher": "gilbert-oliveira",
  "description": "CLI inteligente para gerar mensagens de commit usando OpenAI",
  "version": "2.0.3",
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "main": "dist/commit-wizard.js",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "commit-wizard": "./dist/commit-wizard.js",
    "commit-wizard-node": "./bin/commit-wizard-node.js"
  },
  "scripts": {
    "dev:node": "node bin/commit-wizard-node.js",
    "build:node": "tsc --project tsconfig.node.json",
    "test:node": "node --test tests/",
    "start:node": "node bin/commit-wizard-node.js",
    "ci:test:node": "node --test tests/",
    "ci:build:node": "npm run build:node",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "check-changes": "node -e \"const { execSync } = require('child_process'); const changed = execSync('git diff --name-only HEAD~1 HEAD', { encoding: 'utf8' }).includes('package.json') || execSync('git diff --name-only HEAD~1 HEAD', { encoding: 'utf8' }).match(/(src|bin|scripts|dist)/\\.*/); console.log(changed ? 'üöÄ Mudan√ßas detectadas - deploy recomendado!' : '‚ö†Ô∏è Nenhuma mudan√ßa significativa detectada'); process.exit(changed ? 0 : 1);\""
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "openai",
    "cli",
    "automation",
    "conventional-commits"
  ],
  "author": "Gilbert <contato@gilbert.dev.br>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilbert-oliveira/commit-wizard.git"
  },
  "bugs": {
    "url": "https://github.com/gilbert-oliveira/commit-wizard/issues"
  },
  "homepage": "https://github.com/gilbert-oliveira/commit-wizard#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "dist/",
    "dist-node/",
    "README.md",
    "LICENSE",
    ".commit-wizardrc"
  ],
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "clipboardy": "^4.0.0",
    "dotenv": "^17.2.0",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/ui": "^3.2.4",
    "chalk": "^5.3.0",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  }
}
