{
  "name": "@gilbert_oliveira/commit-wizard",
  "version": "1.2.0",
  "description": "O **Commit Wizard** é uma ferramenta automatizada para geração de mensagens de commit com base na convenção de **Conventional Commits**. Ele ajuda a garantir que suas mensagens de commit sigam um padrão consistente e facilite a comunicação de mudanças no código.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "commit-wizard": "dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "build": "npm run lint && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilbert-oliveira/commit-wizard.git"
  },
  "keywords": [
    "commit",
    "wizard",
    "conventional",
    "commits",
    "conventional-commits",
    "commitizen",
    "commitlint",
    "husky",
    "lint-staged",
    "git",
    "ai",
    "openai",
    "gpt"
  ],
  "author": "Gilbert Oliveira <contato@gilbert.dev.br>",
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gilbert-oliveira/commit-wizard/issues"
  },
  "homepage": "https://github.com/gilbert-oliveira/commit-wizard#readme",
  "dependencies": {
    "@types/node": "^22.14.1",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "gpt-tokenizer": "^1.0.0",
    "inquirer": "^12.5.2",
    "ora": "^8.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/cli-progress": "^3.11.6",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
