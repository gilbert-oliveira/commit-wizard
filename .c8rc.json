{
  "reporter": ["lcov", "text"],
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**",
    "bin/**",
    "dist/**",
    "scripts/**",
    "examples/**",
    "docs_ai/**"
  ],
  "all": true,
  "check-coverage": true,
  "branches": 80,
  "functions": 80,
  "lines": 80,
  "statements": 80,
  "threshold": {
    "branches": 80,
    "functions": 80,
    "lines": 80,
    "statements": 80
  },
  "cwd": ".",
  "src": "src",
  "temp": "coverage/tmp",
  "output": "coverage"
} 